{
  "compilerOptions": {
    "target": "es2019",
    "lib": ["es2020", "dom"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "module": "es2022",
    "moduleResolution": "node",
    "allowJs": true,
    "checkJs": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "removeComments": true,
    "typeRoots": ["node_modules/@types", "types"],
    "paths": {
      "*" : ["./types/*"],
    }
  },
  "include": ["index.js", "types"],
  "exclude": ["examples", "tests"]
}
